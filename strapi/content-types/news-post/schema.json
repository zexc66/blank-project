{
  "kind": "collectionType",
  "collectionName": "news_posts",
  "info": {
    "singularName": "news-post",
    "pluralName": "news-posts",
    "displayName": "News Post",
    "description": "News and insights with AR/EN/FR bodies"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title_ar": { "type": "string" },
    "title_en": { "type": "string" },
    "title_fr": { "type": "string" },
    "slug": {
      "type": "uid",
      "targetField": "title_en",
      "required": true,
      "unique": true
    },
    "body_ar": { "type": "richtext" },
    "body_en": { "type": "richtext" },
    "body_fr": { "type": "richtext" },
    "published_at": { "type": "datetime" },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "common.seo"
    }
  }
}